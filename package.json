{
  "name": "mobile-order-app-backend",
  "version": "1.0.0",
  "description": "Backend API for mobile order application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r ./module-alias.js dist/index.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "build": "tsc && npm run copy-certs",
    "copy-certs": "mkdir -p dist/certs && cp -r src/certs/* dist/certs/ 2>/dev/null || true",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "pm2": "npm run build && pm2 start dist/index.js --name payment-api",
    "init-db": "ts-node src/scripts/initialize-db.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "payment"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-rds": "^3.799.0",
    "@aws-sdk/client-s3": "^3.797.0",
    "@aws-sdk/credential-providers": "^3.799.0",
    "@aws-sdk/s3-request-presigner": "^3.797.0",
    "aws-sdk": "^2.1573.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.7",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^2.7.0",
    "openid-client": "^6.4.2",
    "pg": "^8.11.3",
    "stripe": "^14.14.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
